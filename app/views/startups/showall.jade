extends ../layout

block content
	include ../nav
	include ../mixins
	
	- var c = 0
	.container.allStarups
		.row
			.span12
				.row
					each startup in startups
						- c++
						- if(startup.logo !== "" && startup.logo.versions !== undefined && startup.logo.versions !== null)
							startupLogo = startup.logo.versions[1].url
						- else
							startupLogo = ""
						.span3.sBlock
							.sLogo
								a(href="/startups/"+startup.id)
									if(startupLogo === "")
										i.fui-plus-inverted
									else
										img(src=startupLogo)
							.sText			
								h6.title=startup.name
								p.startup.tagline=startup.tagline
							.sLinks
								hr
								ul.social-links
									mixin social(startup.website, "fui-home")
									mixin social(startup.links.googleplus, "fui-googleplus")
									mixin social(startup.links.facebook, "fui-facebook")
									mixin social(startup.links.twitter, "fui-twitter")

						if((c % 4) === 0)
							.clearfix		
